{
  "name": "daily-jots",
  "displayName": "Jots",
  "description": "Daily journaling for developers – track your work directly in VSCode.",
  "version": "1.0.0",
  "license": "MIT",
  "publisher": "jots",
  "repository": {
    "type": "git",
    "url": "https://github.com/JulienAvezou/jots-vscode-extension.git"
  },
  "icon": "assets/logo.png",
  "activationEvents": [
    "onStartupFinished"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Notebooks"
  ],
  "keywords": [
    "journal",
    "notes",
    "daily",
    "productivity",
    "developer",
    "diary",
    "logging",
    "tracking",
    "tasks",
    "writing"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "journal.newEntry",
        "title": "Jots: New Entry"
      },
      {
        "command": "journal.setToken",
        "title": "Jots: Set Token"
      },
      {
        "command": "journal.showSidebar",
        "title": "Jots: Show Journal Sidebar"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Jots Settings",
      "properties": {
        "journal.reminderHour": {
          "type": "number",
          "default": 17,
          "description": "Hour of the day to remind you to journal (0–23)"
        },
        "journal.reminderMinute": {
          "type": "number",
          "default": 0,
          "description": "Minute of the hour for the reminder"
        }
      }
    }
  },
  "scripts": {
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "npm run compile && vsce package",
    "publish": "npm run compile && vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.0.0",
    "vsce": "2.15.0",
    "webpack": "^5.101.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "jose": "^6.0.12"
  }
}
